# Docker Compose Environment Variables

# System Settings
PUID=1000
PGID=1000
TZ=Europe/Istanbul

# Media Path - Main directory for all media files
# This path will be shared across all services (server, qBittorrent)
MEDIA_PATH=./media

# Authentication
SESSION_SECRET=change-this-to-a-random-secret
ADMIN_PASSWORD=admin

# qBittorrent
QBITTORRENT_URL=http://qbittorrent:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

# Prowlarr
PROWLARR_URL=http://prowlarr:9696
PROWLARR_API_KEY=

# FlareSolverr
FLARESOLVERR_PORT=8191
LOG_LEVEL=info
LOG_HTML=false
CAPTCHA_SOLVER=none

# StashDB
STASHDB_API_URL=https://stashdb.org/graphql
STASHDB_API_KEY=

# AI Matching
AI_MATCHING_ENABLED=false
AI_SIMILARITY_THRESHOLD=0.85
